<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.makbeard.logoped.TaleReadPickActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image_part1_imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zaglushka"
                    app:riv_corner_radius="20dip"
                    />


<!--                <ImageView
                    android:id="@+id/image_part1_imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zaglushka" />-->

                <TextView
                    android:id="@+id/text_part1_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_part1_imageview"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@id/image_part1_imageview"
                    android:layout_toStartOf="@+id/image_part1_imageview"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_part2_imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zaglushka"
                    app:riv_corner_radius="20dip"/>

                <TextView
                    android:id="@+id/text_part2_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_part2_imageview"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@id/image_part2_imageview"
                    android:layout_toStartOf="@+id/image_part2_imageview"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_part3_imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zaglushka"
                    app:riv_corner_radius="20dip"/>

                <TextView
                    android:id="@+id/text_part3_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_part3_imageview"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@id/image_part3_imageview"
                    android:layout_toStartOf="@+id/image_part3_imageview"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_part4_imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zaglushka"
                    app:riv_corner_radius="20dip"/>

                <TextView
                    android:id="@+id/text_part4_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_part4_imageview"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@id/image_part4_imageview"
                    android:layout_toStartOf="@+id/image_part4_imageview"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
